BoxLayout:
    orientation: "vertical"

    MDTopAppBar:
        title: "Password Generator"
        md_bg_color: app.theme_cls.primary_color
        specific_text_color: 1,1,1,1

    BoxLayout:
        orientation: "vertical"
        padding: "20dp"
        spacing: "15dp"

        MDCard:
            orientation: "vertical"
            size_hint: None, None
            size: "300dp", "400dp"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            padding: "20dp"
            spacing: "15dp"
            elevation: 8
            radius: [20, 20, 20, 20]

            MDLabel:
                text: "Create Account"
                halign: "center"
                font_style: "H5"

            MDTextField:
                id: name_input
                hint_text: "Enter Name"
                helper_text: "This will be part of the username"
                helper_text_mode: "on_focus"

            MDTextField:
                id: platform_input
                hint_text: "Platform (e.g. Facebook)"
                helper_text: "Saved with this name"
                helper_text_mode: "on_focus"

            MDTextField:
                id: phone_input
                hint_text: "Phone Number (+91...)"
                helper_text: "Will send via WhatsApp"
                helper_text_mode: "on_focus"

            MDRaisedButton:
                text: "Generate & Send"
                pos_hint: {"center_x": 0.5}
                on_press: app.generate_and_save()

            MDLabel:
                id: output_label
                text: "Generated username & password will appear here"
                halign: "center"
                theme_text_color: "Secondary"
                font_style: "Caption"